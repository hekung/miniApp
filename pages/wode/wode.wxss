#popover .main-content .bottom-btn {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 44rpx;
}

#popover .main-content .bottom-btn button {
    flex: 1;
    border: 1px solid #000;
}

#popover .weui-dialog__ft {
    display: none;
}

#submit-query {
    color: #fff;
    height: 80rpx;
    border-radius: 8rpx;
    margin-left: 44rpx;
    background-color: #000;
}