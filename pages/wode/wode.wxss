page {
    height: 100%;
}

.body-my {
    height: 100%;
}

.body-my .main {
    padding-bottom: 100rpx;
}

.body-my .main-top {
    height: 326rpx;
    background-color: #000;
    background: #fff no-repeat top left;
    background-size: cover;
    position: relative;
}

.body-my .main-top .bg {
    width: 100%;
    height: 100%;
}

.main-top .main-top-info {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    padding: 52rpx 20rpx;
}

.click-get-tel {
    background: rgb(225, 37, 27);
    font-weight: 400;
    text-align: left;
    font-size: 24rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #fff;
    width: 200rpx;
    text-align: center;
    border-radius: 10rpx;
    padding: 0;
}

.main-top .person-info {
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;
}

.main-top .person-info .header {
    height: 160rpx;
    width: 160rpx;
    border-radius: 80rpx;
    margin-right: 30rpx;
    overflow: hidden;
}

.main-top .person-info .header .image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 80rpx;
}


.main-top .person-info .name.has-btn {
    flex: 1;
}

.main-top .person-info .name .click-getinfo {
    background: 0 none;
    font-weight: 400;
    padding-left: 0;
    text-align: left;
    color: rgb(225, 37, 27);
}

.name .inte-nav {
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    background-color: #000;
    font-size: 22rpx;
    color: #fff;
    display: inline-block;
}

.main-top .person-info .goto-personinfo .to-edit-info {
    color: #fff;
    font-size: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.main-top .person-info .to-edit-info .arrow-right {
    width: 48rpx;
    height: 48rpx;
}

.main-top .order-types {
    height: 132rpx;
    width: 710rpx;
    background: #fff;
    box-shadow: 0px 0px 40rpx 0px rgba(0, 0, 0, 0.2);
    border-radius: 16rpx;
    position: absolute;
    transform: translateX(-50%);
    left: 50%;
    bottom: -66rpx;
}

.main-top .order-types .ul {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 20rpx;
}

.main-top .order-types .ul .li {
    flex: 1;
    position: relative;
    height: 132rpx;
}

.main-top .order-types .ul .li .each-status {
    display: flex;
    height: 100%;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.main-top .order-types .ul .li .each-status image {
    width: 72rpx;
    height: 52rpx;
    margin-bottom: 4rpx;
}

.main-top .order-types .ul .li .each-status text {
    font-size: 22rpx;
    font-weight: 400;
    color: #858585;
}

.main-top .order-types .ul .li .point {
    position: absolute;
    left: 80rpx;
    top: 8rpx;
    background-color: #000;
    color: #fff;
    min-width: 40rpx;
    height: 40rpx;
    border-radius: 20rpx;
    line-height: 40rpx;
    font-size: 20rpx;
    text-align: center;
}

.main-process {
    margin-top: 66rpx;
}

.main-process .query {
    padding: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.main-process .query>view {
    background-color: #f7f7f7;
    height: 140rpx;
    background: linear-gradient(151deg, #69799f 0%, #384466 100%);
    box-shadow: 0px 20rpx 40rpx 0px rgba(13, 25, 71, 0.2);
    border-radius: 16rpx;
    flex: 1;
}

.main-process .query>view:last-of-type {
    background: linear-gradient(180deg, #c1a882 0%, #876a47 100%);
    box-shadow: 0px 20rpx 40rpx 0px rgba(123, 86, 11, 0.2);
    margin-left: 20rpx;
}

.main-process .query view .navigator {
    display: block;
    height: 100%;
    position: relative;
}

.main-process .query view .navigator text {
    display: inline-block;
    line-height: 140rpx;
    font-size: 28rpx;
    padding-left: 44rpx;
    font-weight: 400;
    color: #fff
}

.main-process .query view .navigator image {
    position: absolute;
    right: 16rpx;
    bottom: 0;
    width: 128rpx;
    height: 104rpx;
}

.body-my .recommend-title {
    height: 80rpx;
    justify-content: center;
    display: flex;
}

.body-my .recommend-title>view {
    width: 200rpx;
}

.body-my .recommend-title>view>view {
    height: 40rpx;
}

.body-my .recommend-title>view>view:first-child {
    border-bottom: 1px solid #d8d8d8;
}

.body-my .recommend-title text {
    line-height: 80rpx;
    font-size: 28rpx;
    padding: 0 40rpx;
    color: #c6c6c6;
}

.relate .ul {
    overflow: hidden;
}

.relate .ul .li {
    float: left;
    width: 50%;
    height: 500rpx;
    margin-bottom: 20rpx;
}

.relate .ul .li:nth-child(2n) {
    padding-right: 20rpx;
    padding-left: 10rpx;
}

.relate .ul .li:nth-child(2n+1) {
    padding-left: 20rpx;
    padding-right: 10rpx;
}

.relate .ul .li navigator {
    background-color: #fff;
    border-radius: 0 0 16rpx 16rpx;
    height: 100%;
    display: block;
    box-shadow: 0 10rpx 80rpx 0 rgba(0, 0, 0, 0.06)
}

.relate .ul .li navigator image {
    width: 100%;
    height: 344rpx;
}

.relate .ul .li navigator view {
    line-height: 40rpx;
    padding: 0 20rpx;
    font-size: 24rpx;
    font-weight: 500;
    color: #3d3d3d;
    line-height: 40rpx;
    height: 80rpx;
}

.relate .ul .li navigator text {
    font-size: 32rpx;
    font-weight: 700;
    line-height: 60rpx;
    color: #000;
    margin-left: 20rpx;
}

#popover {
    padding: 40rpx;
    height: 760rpx;
    left: 20rpx;
    width: 710rpx;
    top: 50%;
    margin-top: -50%;
    position: fixed;
}

#popover image {
    width: 100%;
    height: 100%;
}

#popover .main-content {
    height: 680rpx;
    background-color: #fff;
}

#popover .main-content>.h4 {
    text-align: center;
    line-height: 80rpx;
    height: 80rpx;
    position: relative;
}

#popover .main-content>.h4 .logo {
    margin: 20rpx auto;
    display: block;
    width: 344rpx;
    height: 42rpx;
}

#popover .main-content>.h4 .delete-x {
    position: absolute;
    top: -32rpx;
    right: 0
}

#popover .main-content>.h4 .delete-x image {
    width: 68rpx;
    height: 68rpx;
}

#popover .main-content .service-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #000;
    line-height: 44rpx;
    text-align: center;
}

#popover .main-content .service-tip {
    text-align: center;
    margin: 20rpx 0;
}

#popover .main-content .service-tip .p {
    font-size: 22rpx;
    font-weight: 400;
    color: #acacac;
    line-height: 30rpx;
}

#popover .main-content #info-form .row-item {
    display: flex;
    position: relative;
}

#popover .main-content #info-form .row-item:first-child {
    height: 88rpx;
}

#popover .main-content #info-form .row-item input {
    flex: 1;
    position: relative;
    z-index: 1;
    font-size: 28rpx;
    font-weight: 400;
    color: #3D3D3D;
    border: 1px solid #000;
    border-radius: 8rpx;
    height: 90rpx;
    border: 1px solid rgba(0, 0, 0, 1);
}

